[Unit]
Description=%N

[Container]
Image=docker.io/kanidm/server:1.8.5
ContainerName=%N
HostName=%H
{{ kanidm_ports }}
{{ kanidm_volumes }}
Volume={{ lets_encrypt_dir }}:/certificates:z
AddCapability=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
Memory=1g
PodmanArgs=--cpus=2

[Service]
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target default.target

[Unit]
Description=%N

[Container]
Image=lscr.io/linuxserver/mariadb:latest
ContainerName=%N
HostName=%H
AutoUpdate=registry
Volume=/var/mnt/data2/mariadb/config:/config:z
PublishPort=3306:3306
Memory=4g
PodmanArgs=--cpus=2
UserNS=keep-id
Environment=MYSQL_ROOT_PASSWORD=
NoNewPrivileges=true

[Service]
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target default.target

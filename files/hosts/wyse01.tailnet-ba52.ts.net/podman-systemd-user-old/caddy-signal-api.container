[Unit]
Description=%N

[Container]
Image=docker.io/library/caddy:2
ContainerName=%N
HostName={{ host_name }}
AutoUpdate=registry
Pod=signal-api.pod
Volume=/var/mnt/data1/caddy-signal-api/Caddyfile:/etc/caddy/Caddyfile:z
Memory=500m
PodmanArgs=--cpus=2
NoNewPrivileges=true

[Service]
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target default.target

[Unit]
Description=%N

[Container]
Image=docker.io/library/caddy:2
ContainerName=%N
HostName=%H
AutoUpdate=registry
AddCapability=CAP_NET_BIND_SERVICE
{{ caddy_volumes }}
{{ caddy_network }}
{{ caddy_ports }}
Memory={{ caddy_memory }}
PodmanArgs=--cpus={{ caddy_cpu }}
NoNewPrivileges=true

[Service]
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target default.target
